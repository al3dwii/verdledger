{
  "$schema":"https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "apps/**/dist/**",
        "go/bin/**"
      ],
      "command": "go build -o go/bin/verdledger ./go/cmd/verdledger && pnpm --recursive run build"
    },
    "test":  { "outputs": [] },
    "lint":  { "outputs": [] }
  }
}
